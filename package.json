{
  "name": "cockroach",
  "version": "1.0.0",
  "description": "An interface for Kafka in Node and Meteor",
  "main": "./distribution/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --recursive $(find test/ ! -path '*stubs*')",
    "watch": "mocha -w --compilers js:babel-core/register --recursive $(find test/ ! -path '*stubs*')",
    "build": "babel source lib --presets babel-preset-es2015 --out-dir distribution",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StrictlySkyler/cockroach.git"
  },
  "keywords": [
    "kafka",
    "broker",
    "librdkafka",
    "node-rdkafka",
    "pubsub",
    "pub-sub",
    "message",
    "messages",
    "queue",
    "queues",
    "topics",
    "produce",
    "consume",
    "producer",
    "consumer"
  ],
  "author": "Skyler Brungardt <skyler.brungardt@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StrictlySkyler/cockroach/issues"
  },
  "homepage": "https://github.com/StrictlySkyler/cockroach#readme",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-preset-es2015": "^6.18.0"
  },
  "dependencies": {
    "debug": "^2.5.1",
    "node-rdkafka": "^0.6.2",
    "uuid": "^3.0.1"
  }
}
